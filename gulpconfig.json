{
  "browserSyncOptions": {
    "server": "./public/",
    "notify": true
  },
  "browserSyncWatchFiles": [
    "./public/assets/img/*",
    "./public/assets/css/*.min.css",
    "./public/assets/js/*.min.js",
    "./**/*.php",
    "./**/*.html"
  ],
  "paths": {
    "js": "./public/assets/js",
    "css": "./public/assets/css",
    "img": "./public/assets/img",
    "imgsrc": "./assets/src/img",
    "sass": "./public/assets/scss",
    "node": "./node_modules/",
    "bower": "./bower_components/",
    "dev": "./assets/src",
    "dist": "./dist",
    "distprod": "./dist-product",
    "vendor": "./assets/vendor"
  }
}